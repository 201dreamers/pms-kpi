#:kivy 2.0.0

#:import PieChart modules.pie_chart.PieChart
#:import piechart_data src.data_provider.piechart_data
#:import calculate_points src.data_provider.calculate_points


<PieScreen>:
    md_bg_color: 0.15, 0.15, 0.15, 1

<GraphScreen>:
    canvas:
        Color:
            rgb: 0, 0, 0
        Line:
            cap: 'round'
            joint: 'round'
            points: [(self.width / 2, 0), (self.width / 2, self.height)]
        Color:
            rgb: 0, 0, 0
        Line:
            cap: 'round'
            joint: 'round'
            points: [(0, self.height / 2), (self.width, self.height / 2)]

        Color:
            rgb: 1, 0, 0
        Line:
            cap: 'round'
            joint: 'round'
            points: calculate_points(self.width, self.height)

<UI>:
    orientation: "vertical"

    MDBottomNavigation:
        id: panel

        MDBottomNavigationItem:
            id: general_item
            name: "files1"
            text: "General"
            icon: "account-box"

            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)
                pos_hint: {"center_x": .5, "center_y": .5}

                MDLabel:
                    font_style: "Body1"
                    theme_text_color: "Primary"
                    text: "Гакман Дмитро\nГрупа ІО-81\nЗК ІО-8103"
                    halign: "center"

        MDBottomNavigationItem:
            id: my_graph_tab
            name: "graph"
            text: "Graph"
            icon: "graph"

            BoxLayout:

                MDTabs:
                    text_color_active: 1, 1, 1, 1
                    text_color_normal: 1, 1, 1, 1
                    GraphScreen:
                        text: 'Graph'
                    PieScreen:
                        text: 'Pie Chart'
